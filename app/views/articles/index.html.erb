
<div class="container">
  <h1>Listing Articles</h1>

  <%= link_to 'New article', new_article_path , :class => 'btn btn-success mb-4'%> 


  <table class='table table-dark'>
    <tr>
      <th class='text-primary'>Title</th>
      <th class='text-primary'>Text</th>
      <th class='text-success' colspan="3">Controls</th>
    </tr>
  
    <% @articles.each do |article| %>
      <tr>
        <td ><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), :class => 'btn btn-success'  %>
        <%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-primary'  %>
        <%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </table>


  <%= link_to 'Back', new_article_path , :class => 'btn btn-success'  %>
</div>